<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_see_all"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginTop="25dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/item_see_all_placement_image">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="center"
                android:src="@drawable/bck_placeholder"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_see_all_placement_image"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="8dp"
                android:text="Place title"
                android:id="@+id/item_see_all_place_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/item_see_all_place_title"
                android:text="Place description donc c'est quand même un peu plus long !"
                android:id="@+id/item_see_all_place_description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_below="@id/item_see_all_place_description"
                android:text="Place catégorie"
                android:id="@+id/item_see_all_place_categ"/>

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>