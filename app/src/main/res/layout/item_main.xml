<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:background="#f8f8f8"
            android:foreground="?android:attr/selectableItemBackground" app:cardCornerRadius="5dp"
            app:cardElevation="2.5dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp">

        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:layout_marginTop="30dp">


            <RelativeLayout android:layout_width="140dp"
                            android:layout_height="wrap_content"
            >


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/activity_search_image_layout">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="80dp"
                               android:id="@+id/item_main_image"
                               android:src="@drawable/bck_item"/>

                </RelativeLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:layout_below="@id/activity_search_image_layout"
                              android:padding="10dp"
                              android:orientation="vertical"
                              android:layout_alignParentBottom="false">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Lithuanie jolie vue"
                              android:id="@+id/item_main_title"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Lithuanie, ville nÂ°3"
                              android:id="@+id/item_main_place"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>